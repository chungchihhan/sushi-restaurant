{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon src/index.ts",
        "build": "tsc",
        "start": "node dist/backend/src/index.js",
        "lint": "eslint --max-warnings=0 .",
        "format": "prettier --write .",
        "test": "nyc mocha --bail --require ts-node/register src/test/**/*.ts"
    },
    "prettier": {
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "printWidth": 80,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "semi": true,
        "importOrder": [
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.1",
        "@types/bcrypt": "^5.0.2",
        "@types/chai": "^4.3.11",
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.20",
        "@types/express-jwt": "^7.4.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/mocha": "^10.0.6",
        "@types/mongoose": "^5.11.97",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.1",
        "@types/nodemailer": "^6.4.14",
        "@types/sinon": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.9.1",
        "chai": "^4.3.10",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "express-jwt": "^8.4.1",
        "mocha": "^10.2.0",
        "prettier": "^3.0.3",
        "sinon": "^17.0.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "imgur": "^2.3.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "nodemon": "^3.0.1",
        "nyc": "^15.1.0",
        "tslib": "^2.6.2"
    }
}
